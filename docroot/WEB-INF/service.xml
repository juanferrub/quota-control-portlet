<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.1.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_1_0.dtd">

<service-builder package-path="org.lsug.quota">
	<namespace>LSUGQUOTA</namespace>
	
	<entity name="Quota" local-service="true">
		<!-- Primary keys -->
		<column name="quotaId" type="long" primary="true"/>
		<column name="classNameId" type="long"/>
		<column name="classPK" type="long"/>

		<column name="parentQuotaId" type="long" />
		
		<!-- Maximum quota (in GB) -->
		<column name="quotaAssigned" type="long"/>
		
		<!-- Amount used (in GB) -->
		<column name="quotaUsed" type="long"/>
		<!--
			A quota is either "enabled" (QuotaStatus.ENABLED) or
			"disabled" (QuotaStatus.DISABLED)			
		-->
		<column name="quotaStatus" type="int"/>
		
		<!--
			When reaching this percentage, the user (the particular user
			depends on the type of quota) will receive a notification
		-->
		<column name="quotaAlert" type="int"/>
		
		<finder return-type="Quota" name="ClassNameIdClassPK">
			<finder-column name="classNameId"/>
			<finder-column name="classPK"/>
		</finder>

		<finder return-type="Collection" name="ParentQuotaId">
			<finder-column name="parentQuotaId"/>
		</finder>
	</entity>

	<entity name="QuotaDailyLog" local-service="true">
		<!-- Primary keys -->
		<column name="quotaDailyLogId" type="long" primary="true"/>

		<column name="dayAnalyzed" type="Date" />

		<!-- Primary keys -->
		<column name="quotaId" type="long" />

		<!-- Maximum quota (in GB) -->
		<column name="quotaAssigned" type="long"/>

		<!-- Amount used (in GB) -->
		<column name="quotaUsed" type="long"/>
		<!--
			A quota is either "enabled" (QuotaStatus.ENABLED) or
			"disabled" (QuotaStatus.DISABLED)
		-->
		<column name="quotaStatus" type="int"/>

		<finder return-type="Collection" name="QuotaId">
			<finder-column name="quotaId"/>
		</finder>

		<finder return-type="QuotaDailyLog" name="QuotaIdDayAnalyzed">
			<finder-column name="quotaId"/>
			<finder-column name="dayAnalyzed"/>
		</finder>
	</entity>
	
	<exceptions>
		<exception>QuotaExceeded</exception>
	</exceptions>
</service-builder>